async function joinOnlineGame(): Promise<void> {
  try {
    // Primero obtener lista de partidas disponibles
    const response = await fetch('/api/games');
    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }
    
    const data = await response.json();
    const availableGames = data.games.filter((g: any) => g.jugadoresConectados < g.capacidadMaxima);
    
    if (availableGames.length === 0) {
      console.log('‚ùå No hay partidas disponibles para unirse.');
      navigateTo('/game-select');
    }
    
    navigateTo('/game-select');
  } catch (error) {
    console.error('‚ùå Error uni√©ndose a la partida:', error);
    alert(`‚ùå Error: ${error instanceof Error ? error.message : 'Error desconocido'}`);
  }
}

