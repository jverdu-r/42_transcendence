function connectToLobby(gameId: string, gameMode: string): void {
  const statusElement = document.getElementById('connection-status');
  const playersSection = document.getElementById('players-section');
  
  // Construir URL WebSocket
  const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
  const currentUser = getCurrentUser();
  const username = encodeURIComponent(currentUser?.username || 'Usuario');
  const wsUrl = `${protocol}//${window.location.host}/pong/${gameId}?username=${username}`;

  console.log('üîó Conectando al WebSocket del lobby:', wsUrl);
  
  if (lobbySocket) {
    lobbySocket.close();
  }
  
  lobbySocket = new WebSocket(wsUrl);
  
  lobbySocket.onopen = () => {
    console.log('‚úÖ Conectado al lobby del juego');
    updateConnectionStatus('‚úÖ Conectado al servidor', 'Esperando informaci√≥n del juego...', 'green');
  };

  lobbySocket.onmessage = (event) => {
    try {
      const data = JSON.parse(event.data);
      console.log('üì° Mensaje del lobby recibido:', data);
      
      handleLobbyMessage(data);
    } catch (error) {
      console.error('‚ùå Error procesando mensaje del lobby:', error);
    }
  };

  lobbySocket.onclose = () => {
    console.log('üîå Desconectado del lobby');
    updateConnectionStatus('‚ùå Desconectado', 'Conexi√≥n perdida con el servidor', 'red');
  };

  lobbySocket.onerror = (error) => {
    console.error('‚ùå Error en WebSocket del lobby:', error);
    updateConnectionStatus('‚ùå Error de conexi√≥n', 'No se pudo conectar al servidor', 'red');
  };
}

function handleLobbyMessage(data: any): void {
  switch (data.tipo) {
    case 'bienvenida':
      handleWelcomeMessage(data);
      break;
    case 'jugadores_actualizados':
      updatePlayersDisplay(data.jugadores || []);
      break;
    case 'cuenta_atras':
      showCountdown(data.valor);
      break;
    case 'gameStarted':
      startGame();
      break;
    case 'estado':
      updateGameState(data.juego);
      break;
    case 'juego_finalizado':
      showGameResult(data);
      break;
    case 'jugador_desconectado':
      handlePlayerDisconnected(data);
      break;
    default:
      console.log('Tipo de mensaje no manejado:', data.tipo);
  }
}

